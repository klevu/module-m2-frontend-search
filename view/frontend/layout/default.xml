<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="Klevu_Frontend.before.body.end">
            <block name="Klevu_Frontend.js_includes_defer.search"
                   template="Klevu_Frontend::html/head/js_includes_defer.phtml"
                   before="-">
                <arguments>
                    <argument name="js_includes_view_model"
                              xsi:type="object">Klevu\FrontendSearch\ViewModel\Html\Head\JsIncludesQuick</argument>
                    <argument name="escaper_view_model"
                              xsi:type="object">Klevu\Frontend\ViewModel\Escaper</argument>
                </arguments>
            </block>

            <block name="Klevu_FrontendSearch.customer_group_suffix_quick"
                   template="Klevu_FrontendSearch::html/head/customer_group_suffix_quick.phtml"
                   after="Klevu_Frontend.customer_group_suffix">
                <arguments>
                    <argument name="customer_group_suffix_view_model"
                              xsi:type="object">Klevu\FrontendSearch\ViewModel\Html\Head\CustomerGroupSuffixQuick</argument>
                    <argument name="escaper_view_model"
                              xsi:type="object">Klevu\Frontend\ViewModel\Escaper</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
